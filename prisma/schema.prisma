generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String         @id @default(cuid())
  email           String         @unique
  name            String?
  image           String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  defaultCurrency          String            @default("BRL")
  locale                   String            @default("pt-BR")
  enabledTransactionTypes  TransactionType[] @default([INCOME, EXPENSE, TRANSFER, INVESTMENT])
  accounts        Account[]
  budgets         Budget[]
  categories      Category[]
  investments     Investment[]
  recurringRules  RecurringRule[]
  transactions    Transaction[]
  currencies      UserCurrency[]

  @@map("users")
}

model UserCurrency {
  id        String   @id @default(cuid())
  userId    String
  currency  String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, currency])
  @@map("user_currencies")
}

model Account {
  id           String        @id @default(cuid())
  userId       String
  name         String
  type         AccountType   @default(BANK)
  balance      Decimal       @default(0) @db.Decimal(14, 2)
  color        String?
  icon         String?
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  isDefault    Boolean       @default(false)
  bankKey      String?
  bankName     String?
  currency     String        @default("BRL")
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  recurringRules RecurringRule[]
  transactions Transaction[]

  @@map("accounts")
}

model InvestmentCategory {
  id                String                  @id @default(cuid())
  name              String
  investmentType    String
  defaultRateSource String?
  description       String?
  riskLevel         String?
  createdAt         DateTime                @default(now())
  rateHistory       InvestmentRateHistory[]
  investments       Investment[]

  @@map("investment_categories")
}

model InvestmentRateHistory {
  id                   String             @id @default(cuid())
  categoryId           String
  sourceDate           DateTime
  rateAnnualPercentage Decimal            @db.Decimal(8, 4)
  effectiveDate        DateTime           @default(now())
  category             InvestmentCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId, sourceDate])
  @@map("investment_rate_history")
}

model Investment {
  id                 String                @id @default(cuid())
  userId             String
  categoryId         String
  transactionId      String?               @unique
  startDate          DateTime
  principalAmount    Decimal               @db.Decimal(14, 2)
  currency           String                @default("BRL")
  annualInterestRate Decimal               @db.Decimal(8, 4)
  recurring          Boolean               @default(false)
  recurrenceInterval RecurrenceInterval?
  recurrenceAmount   Decimal?              @db.Decimal(14, 2)
  compounding        InvestmentCompounding @default(ANNUAL)
  status             InvestmentStatus      @default(ACTIVE)
  notes              String?
  createdAt          DateTime              @default(now())
  updatedAt          DateTime              @updatedAt
  customCategoryName String?
  category           InvestmentCategory    @relation(fields: [categoryId], references: [id])
  transaction        Transaction?          @relation(fields: [transactionId], references: [id])
  user               User                  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([userId, startDate])
  @@map("investments")
}

model Category {
  id           String          @id @default(cuid())
  userId       String?
  name         String
  type         TransactionType
  icon         String?
  color        String?
  parentId     String?
  createdAt    DateTime        @default(now())
  budgets      Budget[]
  parent       Category?       @relation("CategoryParent", fields: [parentId], references: [id])
  children     Category[]      @relation("CategoryParent")
  user         User?           @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  recurringRules RecurringRule[]

  @@map("categories")
}

model Transaction {
  id                      String            @id @default(cuid())
  userId                  String
  accountId               String
  categoryId              String?
  type                    TransactionType
  amount                  Decimal           @db.Decimal(14, 2)
  description             String?
  date                    DateTime
  status                  TransactionStatus @default(PAID)
  metadata                Json?
  createdAt               DateTime          @default(now())
  updatedAt               DateTime          @updatedAt
  frequency               Frequency?
  isRecurring             Boolean           @default(false)
  parentTransactionId     String?
  recurrenceEnd           DateTime?
  amountInDefaultCurrency Decimal           @default(0) @db.Decimal(14, 2)
  currency                String            @default("BRL")
  exchangeRateUsed        Decimal           @default(1) @db.Decimal(14, 6)
  recurringRuleId         String?
  investment              Investment?
  account                 Account           @relation(fields: [accountId], references: [id])
  category                Category?         @relation(fields: [categoryId], references: [id])
  parentTransaction       Transaction?      @relation("TransactionChildren", fields: [parentTransactionId], references: [id])
  childTransactions       Transaction[]     @relation("TransactionChildren")
  recurringRule           RecurringRule?    @relation(fields: [recurringRuleId], references: [id])
  user                    User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@index([userId, accountId])
  @@index([userId, categoryId])
  @@index([userId, isRecurring])
  @@map("transactions")
}

model Budget {
  id         String       @id @default(cuid())
  userId     String
  categoryId String?
  name       String
  amount     Decimal      @db.Decimal(14, 2)
  period     BudgetPeriod @default(MONTHLY)
  startDate  DateTime
  endDate    DateTime?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  category   Category?    @relation(fields: [categoryId], references: [id])
  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("budgets")
}

model RecurringRule {
  id                   String          @id @default(cuid())
  userId               String
  accountId            String
  categoryId           String?
  destinationAccountId String?
  type                 TransactionType
  amount               Decimal         @db.Decimal(14, 2)
  currency             String          @default("BRL")
  description          String?
  frequency            Frequency
  startDate            DateTime
  endDate              DateTime?
  lastGeneratedDate    DateTime?
  isActive             Boolean         @default(true)
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  user                 User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  account              Account         @relation(fields: [accountId], references: [id])
  category             Category?       @relation(fields: [categoryId], references: [id])
  transactions         Transaction[]

  @@index([userId, isActive])
  @@map("recurring_rules")
}

enum AccountType {
  CASH
  BANK
  CREDIT_CARD
  INVESTMENT
  CHECKING
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
  INVESTMENT
}

enum InvestmentCompounding {
  ANNUAL
  DAILY
}

enum InvestmentStatus {
  ACTIVE
  CANCELED
  COMPLETED
}

enum RecurrenceInterval {
  MONTHLY
  QUARTERLY
  YEARLY
}

enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

enum TransactionStatus {
  PAID
  PENDING
}

enum BudgetPeriod {
  WEEKLY
  MONTHLY
  YEARLY
}
